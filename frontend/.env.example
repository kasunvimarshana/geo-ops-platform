# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000/api
# For Android emulator, use: http://10.0.2.2:8000/api
# For physical device, use your machine's IP: http://192.168.1.x:8000/api

# API timeout in milliseconds (default: 30000 = 30 seconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# Google Maps API Key
# Get your key from: https://console.cloud.google.com/
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Mapbox Access Token (Alternative to Google Maps)
# Get your token from: https://account.mapbox.com/
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# App Environment
EXPO_PUBLIC_APP_ENV=development

# Feature Flags
EXPO_PUBLIC_ENABLE_TRACKING=true
EXPO_PUBLIC_ENABLE_OFFLINE=true
EXPO_PUBLIC_DEBUG_MODE=true

# Analytics (Optional)
# EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=
# EXPO_PUBLIC_FIREBASE_API_KEY=

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL=300000
# Sync interval in milliseconds (default: 300000 = 5 minutes)

EXPO_PUBLIC_SYNC_MAX_RETRY_COUNT=3
# Maximum retry count for failed sync operations (default: 3)

EXPO_PUBLIC_SYNC_RETRY_DELAY=2000
# Retry delay in milliseconds (default: 2000 = 2 seconds)

# GPS Configuration
EXPO_PUBLIC_GPS_ACCURACY_THRESHOLD=20
# GPS accuracy threshold in meters (default: 20)

EXPO_PUBLIC_TRACKING_INTERVAL=60000
# GPS tracking interval in milliseconds (default: 60000 = 1 minute)

EXPO_PUBLIC_GPS_DISTANCE_FILTER=10
# Minimum distance in meters before location update (default: 10)
