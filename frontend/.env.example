# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000/api/v1
EXPO_PUBLIC_API_TIMEOUT=30000

# Map Configuration
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=

# App Configuration
EXPO_PUBLIC_APP_NAME="Geo Ops"
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_DEFAULT_LANGUAGE=en

# Feature Flags
EXPO_PUBLIC_ENABLE_GPS_TRACKING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_BACKGROUND_SYNC=true

# GPS Configuration
EXPO_PUBLIC_GPS_MIN_ACCURACY=50
EXPO_PUBLIC_GPS_TRACKING_INTERVAL=5000
EXPO_PUBLIC_GPS_DISTANCE_FILTER=5

# Sync Configuration
EXPO_PUBLIC_SYNC_INTERVAL=300000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3
EXPO_PUBLIC_RETRY_DELAY=5000

# Storage Configuration
EXPO_PUBLIC_DATABASE_NAME=geoops.db
EXPO_PUBLIC_MAX_OFFLINE_DAYS=7

# Debug
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
