APP_NAME="Geo Ops Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=geoops
DB_USERNAME=root
DB_PASSWORD=

# For PostgreSQL with PostGIS (recommended for spatial data)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=geoops
# DB_USERNAME=postgres
# DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@geoops.lk"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-south-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT Configuration
JWT_SECRET=
JWT_ALGO=HS256
JWT_TTL=60                    # Access token expiry in minutes (1 hour)
JWT_REFRESH_TTL=43200         # Refresh token expiry in minutes (30 days)

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=ap2

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_RATE_LIMIT=100            # Requests per minute

# Application Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,si
DEFAULT_TIMEZONE=Asia/Colombo
DEFAULT_CURRENCY=LKR

# Subscription Configuration
FREE_TIER_MEASUREMENTS=10
FREE_TIER_DRIVERS=1
FREE_TIER_EXPORTS=5

BASIC_TIER_MEASUREMENTS=100
BASIC_TIER_DRIVERS=5
BASIC_TIER_EXPORTS=50
BASIC_TIER_PRICE=2500

PRO_TIER_MEASUREMENTS=1000
PRO_TIER_DRIVERS=20
PRO_TIER_EXPORTS=500
PRO_TIER_PRICE=7500

# GPS Configuration
GPS_MIN_ACCURACY=50           # Minimum GPS accuracy in meters
GPS_TRACKING_INTERVAL=30      # Tracking interval in seconds

# File Upload Configuration
MAX_UPLOAD_SIZE=10240         # Maximum file size in KB (10MB)
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Google Maps API (for frontend map integration)
GOOGLE_MAPS_API_KEY=

# Mapbox API (alternative to Google Maps)
MAPBOX_ACCESS_TOKEN=

# SMS Gateway Configuration (for Sri Lanka)
SMS_PROVIDER=dialog
SMS_API_KEY=
SMS_SENDER_ID=GeoOps

# Payment Gateway Configuration
PAYMENT_GATEWAY=stripe
STRIPE_KEY=
STRIPE_SECRET=

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_FORCE_UPDATE_VERSION=1.0.0
MOBILE_API_URL=http://localhost:8000/api/v1

# Development & Debug
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK=s3
BACKUP_SCHEDULE=daily

# Monitoring & Logging
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:19006,exp://192.168.*:*
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=3600
CORS_SUPPORTS_CREDENTIALS=true
